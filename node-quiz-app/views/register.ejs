<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus">Register</i>
            </h1>
            <span><%- include('./partials/messages.ejs') %></span>
            <form action="/users/register" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input 
                        type="name" 
                        name="name" 
                        id="name"
                        class="form-control"
                        placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email"
                        class="form-control"
                        placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>""
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        class="form-control"
                        placeholder="Create Password"
                        value="<%= typeof email != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input 
                        type="password" 
                        name="password2" 
                        id="password2"
                        class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof email != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="margin-top: 20px;" id="submitBtn">Register</button>
            </form>
            <p class="lead mt-4">Have an Account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>

